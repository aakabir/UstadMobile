<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- see http://android-developers.blogspot.de/2014/10/appcompat-v21-material-design-for-pre.html -->

    <style name="Theme.UstadTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <!--<item name="colorPrimary">@color/material_blue_grey_800</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>

    </style>


    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary_text</item>
        <item name="android:background">@color/primary</item>
        <item name="tabBackground">@color/primary</item>
        <item name="tabSelectedTextColor">@color/primary_text</item>
    </style>

</resources>
