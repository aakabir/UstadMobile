<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_page_drawer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/coordinationLayout"
        android:layout_height="match_parent">
        <include
            layout="@layout/toolbar_with_progress"/>


        <RelativeLayout
            android:id="@+id/umEditorHolder"
            android:layout_marginBottom="57dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- Main content -->
            <com.ustadmobile.port.android.contenteditor.UmEditorWebView
                android:id="@+id/editor_content"
                android:layout_marginTop="?actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <!-- BottomSheet formatting-->
        <include layout="@layout/content_editor_bottom_sheets_main" />

        <!-- BottomSheet media source-->
        <include layout="@layout/content_multimedia_sources_bottom_sheets_main" />

        <!-- BottomSheet content insert-->
        <include layout="@layout/content_options_bottom_sheets_main" />

        <RelativeLayout
            android:visibility="gone"
            android:background="@color/icons"
            android:id="@+id/new_doc_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/blank_doc_title"
                android:textColor="@color/divider_faint_blank"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:text="Blank document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@+id/blank_doc_title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="Click"
                    android:textColor="@color/basepoint_navigation_drawer_tint"
                    android:id="@+id/click_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:tint="@color/accent"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:src="@drawable/ic_editor_action"
                    android:layout_width="@dimen/dimen_16dp"
                    android:layout_height="@dimen/dimen_16dp" />
                <TextView
                    android:textColor="@color/basepoint_navigation_drawer_tint"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="to start editing"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:id="@+id/editing_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_start_editing"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|end"
            fab:fab_size="normal"
            android:src="@drawable/ic_editor_action"
            android:layout_margin="@dimen/dimen_16dp"
            android:layout_height="wrap_content" />

        <android.support.design.widget.AppBarLayout
            android:visibility="gone"
            android:id="@+id/um_appbar_bottom"
            android:background="@color/icons"
            android:elevation="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
            <com.ustadmobile.port.android.contenteditor.UmEditorToolbarView
                android:layout_marginRight="14dp"
                android:id="@+id/um_toolbar_bottom"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:paddingLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                />
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/content_pages_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"/>

</android.support.v4.widget.DrawerLayout>