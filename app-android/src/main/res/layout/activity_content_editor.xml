<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_page_drawer"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_4dp">

            <include
                android:id="@+id/um_toolbar"
                layout="@layout/layout_toolbar" />
        </android.support.design.widget.AppBarLayout>

        <!-- Main content -->
        <WebView
            android:layout_marginTop="?actionBarSize"
            android:id="@+id/editor_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Bottom Sheet formatting-->
        <include layout="@layout/content_editor_bottom_sheets_main" />

        <!-- Bottom Sheet media source-->
        <include layout="@layout/content_multimedia_sources_bottom_sheets_main" />

        <com.github.clans.fab.FloatingActionButton
            android:visibility="gone"
            android:id="@+id/content_editor_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="90dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:src="@drawable/ic_document_preview"
            fab:fab_colorNormal="@color/icons"
            fab:fab_colorPressed="@color/divider"
            fab:fab_size="normal"
            fab:fab_colorRipple="@color/divider"/>

        <com.github.clans.fab.FloatingActionMenu
            android:layout_gravity="bottom|end"
            android:id="@+id/content_editor_insert"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp"
            fab:menu_fab_size="normal"
            fab:menu_colorNormal="@color/accent"
            fab:menu_colorPressed="@color/accent_dark"
            fab:menu_colorRipple="@color/content_white_btn_ripple"
            fab:menu_animationDelayPerItem="100"
            fab:menu_icon="@drawable/fab_add"
            fab:menu_buttonSpacing="0dp"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_paddingTop="4dp"
            fab:menu_labels_paddingRight="8dp"
            fab:menu_labels_paddingBottom="4dp"
            fab:menu_labels_paddingLeft="8dp"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_textColor="@color/icons"
            fab:menu_labels_textSize="14sp"
            fab:menu_labels_cornerRadius="3dp"
            fab:menu_labels_colorNormal="#333333"
            fab:menu_labels_colorPressed="#444444"
            fab:menu_labels_colorRipple="@color/content_white_fab_pressed"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_position="left"
            fab:menu_openDirection="up"
            fab:menu_backgroundColor="@android:color/transparent"
            tools:ignore="RtlSymmetry">

            <com.github.clans.fab.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/content_type_multiple_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list_multiple_choice_20dp"
                fab:fab_colorNormal="@color/icons"
                fab:fab_colorPressed="@color/content_white_fab_pressed"
                fab:fab_size="mini"
                fab:fab_colorRipple="@color/content_white_btn_ripple"
                fab:fab_label="@string/content_type_multiple_choice" />

            <com.github.clans.fab.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/content_type_fill_blanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_create_black_24dp"
                fab:fab_colorNormal="@color/icons"
                fab:fab_colorPressed="@color/content_white_fab_pressed"
                fab:fab_size="mini"
                fab:fab_colorRipple="@color/content_white_btn_ripple"
                fab:fab_label="@string/content_type_fill_the_blanks" />

            <com.github.clans.fab.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/content_type_multimedia"
                android:layout_width="wrap_content"
                android:tint="@color/text_secondary"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_perm_media_black_24dp"
                fab:fab_colorNormal="@color/icons"
                fab:fab_colorPressed="@color/content_white_fab_pressed"
                fab:fab_size="mini"
                fab:fab_colorRipple="@color/content_white_btn_ripple"
                fab:fab_label="@string/content_type_multimedia" />

        </com.github.clans.fab.FloatingActionMenu>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/content_pages_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"/>



</android.support.v4.widget.DrawerLayout>